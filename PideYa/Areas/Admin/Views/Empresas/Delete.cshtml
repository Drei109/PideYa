@model PideYa.Models.empresa

@{
    ViewBag.Title = "Empresas | Eliminar";
}
<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            ELIMINAR EMPRESA
                        </h3>
                    </div>
                </div>
            </div>
            <!--begin::Form-->
            @using (Html.BeginForm("Delete", "Empresas", FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.empresa_id)
                <div class="m-portlet__body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.LabelFor(m => m.nombre, "Nombre:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.nombre)
                        </dd>

                        <dt>
                            @Html.LabelFor(m => m.descripcion, "Descripción:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.descripcion)
                        </dd>

                        <dt>
                            @Html.LabelFor(m => m.ruc, "RUC:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ruc)
                        </dd>

                        <dt>
                            @Html.LabelFor(m => m.estado_empresa_id_fk, "Estado:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.estado_empresa.nombre)
                        </dd>
                    </dl>
                </div>

                <div class="m-portlet__foot">
                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-primary">
                                Eliminar
                            </button>
                            <a href="/Admin/Empresas/Index" class="btn btn-secondary">
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
            }
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>
