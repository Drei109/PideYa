@using PideYa.Models

@{
    ViewBag.Title = "Pedido";
    Layout = "~/Areas/Employee/Views/Shared/_LayoutPedido.cshtml";
    List<Plato_CategoriaRestauranteDTO> categorias = ViewBag.categorias;

}

<div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
    <!-- BEGIN: Left Aside -->
    <button class="m-aside-left-close  m-aside-left-close--skin-dark " id="m_aside_left_close_btn">
        <i class="la la-close"></i>
    </button>
    <div id="m_aside_left" class="m-grid__item	m-aside-left  m-aside-left--skin-dark ">
        <div id="m_ver_menu"
             class="m-aside-menu  m-aside-menu--skin-dark m-aside-menu--submenu-skin-dark "
             m-menu-vertical="1"
             m-menu-scrollable="0" m-menu-dropdown-timeout="500">
            <ul class="m-menu__nav  m-menu__nav--dropdown-submenu-arrow ">
                @foreach (var categoria in categorias)
                {
                    <li class="m-menu__item  m-menu__item--submenu"  aria-haspopup="true" m-menu-submenu-toggle="hover">
                        <a href="#" class="m-menu__link" id="@("itemCategoria" + categoria.plato_categoria_id)">
                            <span class="m-menu__link-text" id="@categoria.plato_categoria_id">
                                @categoria.nombre
                            </span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <!-- END: Left Aside -->
    <div class="m-grid__item m-grid__item--fluid m-wrapper">
        <div id="plates-main" class="m-content">
            @*<p>@ViewBag.mesaId</p>*@
            <input type="hidden" id="mesaId" value="@ViewBag.mesaId" />
            <div id="pedidos-content" class="row">
                <div id="platos" class="col-8"></div>
                <div id="pedido" class="col-lg-offset-8 col-md-offset-8 col-4">
                    <div class="m-portlet">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <h3 class="m-portlet__head-text">
                                        Pedido
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="m-portlet__body">
                            <div class="m-invoice__body m-invoice__body--centered">
                                <div class="table-responsive">
                                    <table id="pedido-table" class="table">
                                        <thead>
                                        <tr>
                                            <th>Plato</th>
                                            <th>#</th>
                                            <th>Precio</th>
                                        </tr>
                                        </thead>
                                        <tbody id="pedido-cuerpo">
                                        @*<tr>
                                            <td>Creative Design</td>
                                            <td>80</td>
                                            <td class="m--font-danger">$3200.00</td>
                                        </tr>
                                        <tr>
                                            <td>Front-End Development</td>
                                            <td>120</td>
                                            <td class="m--font-danger">$4800.00</td>
                                        </tr>
                                        <tr>
                                            <td>Back-End Development</td>
                                            <td>210</td>
                                            <td class="m--font-danger">$12600.00</td>
                                        </tr>*@
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <button id="enviarPedido" class="btn btn-primary">
                                Enviar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


