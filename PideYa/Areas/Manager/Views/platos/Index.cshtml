@model IEnumerable<PideYa.Models.plato>

@{
    ViewBag.Title = "Platos";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="m-portlet ">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text m--font-bold">
                            PLATOS
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body m--margin-bottom-5">
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-top-5 m--margin-bottom-30">
                    <div class="row align-items-center">
                        <div class="col-xl-8 order-2 order-xl-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-4">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control " placeholder="Buscar..." id="generalSearch">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span>
                                                <i class="la la-search"></i>
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                            <a href="/Manager/Platos/Create" class="btn btn-warning m-btn m-btn--custom m-btn--icon m-btn--air ">
                                <span>
                                    <i class="flaticon-add-circular-button"></i>
                                    <span>
                                        Nuevo Platos
                                    </span>
                                </span>
                            </a>
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
                        </div>
                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <table class="m-datatable" id="html_table" style="width: 100%">
                    <thead>
                        <tr>
                            <th title="Field #1">ID</th>
                            <th title="Field #2">Restaurante</th>
                            <th title="Field #2">Nombre</th>
                            <th title="Field #3">Categoria</th>
                            <th title="Field #5">Precio</th>
                            <th title="Field #5">Foto</th>
                            <th title="Field #5">Estado</th>
                            <th title="Field #5">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.plato_id</td>
                                <td>@e.restaurante.nombre</td>
                                <td>@e.nombre</td>
                                <td>@e.plato_categoria.nombre</td>
                                <td>@e.precio</td>
                                <td>@e.foto</td>
                                <td>@e.estado</td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = e.plato_id }, new { @class = "btn m-btn--square  btn-outline-warning m-btn m-btn--outline-2x" })
                                    @Html.ActionLink("Detalles", "Details", new { id = e.plato_id }, new { @class = "btn m-btn--square  btn-outline-info m-btn m-btn--outline-2x" })
                                    @Html.ActionLink("Eliminar", "Delete", new { id = e.plato_id }, new { @class = "btn m-btn--square  btn-outline-danger m-btn m-btn--outline-2x" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
</div>