@model PideYa.Areas.User.Models.PedidoViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("GuardarPedidoCabecera", "Procesos"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Pedido</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Restaurante :</label>
                <div class="col-md-10">
                    @Html.DropDownList("restaurante_id", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label>Mesa :</label>
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.PedidoCabecera.mesa_id_fk)
                    @Html.TextBox("mesa_pedido_cabecera_search", "", new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.PedidoCabecera.mesa_id_fk)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", "Home")
    </div>
</body>
</html>